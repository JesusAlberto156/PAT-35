  <form id="employeeForm" action="/PAT-035/addEmpleado" method="POST">
    <div
      class="modal fade"
      id="CreateProject"
      tabindex="-1"
      aria-labelledby="CreateProjectLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="CreateProjectLabel">Agregar Nuevo
              Empleado</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body p-4">
            <div class="mb-3">
              <label for="projectName" class="form-label">Nombre Completo</label>
              <input
                type="text"
                class="form-control"
                id="projectName"
                name="nombre"
                placeholder="Agrega el nombre completo..."
                required
              />
            </div>
            <div class="mb-3">
              <label for="projectPhone" class="form-label">Telefono</label>
              <input
                type="text"
                class="form-control"
                id="projectPhone"
                name="telefono"
                placeholder="Agrega el telefono..."
                required
              />
            </div>
            <div class="mb-3">
              <label for="projectEmail" class="form-label">Correo</label>
              <input
                type="text"
                class="form-control"
                id="projectEmail"
                name="correo"
                placeholder="Agrega el correo..."
                required
              />
            </div>
            <div class="mb-3">
              <label for="projectGender" class="form-label">Sexo</label>
              <select class="form-select" id="projectGender" name="sexo" required>
                <option value="M">Masculino</option>
                <option value="F">Femenino</option>
              </select>
            </div>

            <div class="mb-3">
              <label for="projectPosition" class="form-label">Puesto</label>
              <input
                type="text"
                class="form-control"
                id="projectPosition"
                name="puesto"
                placeholder="Agrega el puesto..."
                required
              />
            </div>
            <div class="mb-3">
                <label for="projectDate" class="form-label">Fecha de ingreso en el puesto</label>
                <div class="input-group mb-3">
                  <input
                    type="text"
                    class="form-control datepicker"
                    id="projectDate"
                    name="fecha_ingreso"
                    placeholder="Agrega la fecha..."
                    required
                    pattern="\d{4}/\d{2}/\d{2}"
                    title="Formato de fecha inválido. Utiliza el formato YYYY/MM/DD"
                  />
                  <span class="input-group-text" id="basic-addon2">AÑO/MES/DIA</span>
                </div>
            </div>

          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-light"
              data-bs-dismiss="modal"
            >Cerrar</button>
            <button type="submit" class="btn btn-primary">Agregar Empleado</button>
          </div>
        </div>
      </div>
    </div>
  </form>

