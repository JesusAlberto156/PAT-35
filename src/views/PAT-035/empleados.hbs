      class="modal fade"
      id="editProject"
      tabindex="-1"
      aria-labelledby="CreateProjectLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="CreateProjectLabel">Editar Empleado</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body p-4">
            <div class="mb-3">
              <label for="projectName" class="form-label">Nombre Completo</label>
              <input
                type="text"
                class="form-control"
                id="nombreform"
                name="nombre"
                placeholder="Agrega el nombre completo..."
              />
            </div>
            <div class="mb-3">
              <label for="projectPhone" class="form-label">Telefono</label>
              <input
                type="text"
                class="form-control"
                id="projectPhone"
                name="telefono"
                placeholder="Agrega el telefono..."
              />
            </div>
            <div class="mb-3">
              <label for="projectEmail" class="form-label">Correo</label>
              <input
                type="text"
                class="form-control"
                id="projectEmail"
                name="correo"
                placeholder="Agrega el correo..."
              />
            </div>
            <div class="mb-3">
              <label for="projectGender" class="form-label">Sexo</label>
              <select class="form-select" id="projectGender" name="sexo">
                <option value="M">Masculino</option>
                <option value="F">Femenino</option>
              </select>
            </div>

            <div class="mb-3">
              <label for="projectPosition" class="form-label">Puesto</label>
              <input
                type="text"
                class="form-control"
                id="projectPosition"
                name="puesto"
                placeholder="Agrega el puesto..."
              />
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-light"
              data-bs-dismiss="modal"
            >Cerrar</button>
            <button type="submit" class="btn btn-primary">Agregar Empleado</button>
          </div>
        </div>
      </div>
    </div>
  </form>


