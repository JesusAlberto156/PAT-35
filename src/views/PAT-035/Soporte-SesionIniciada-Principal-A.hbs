                        var pageElements = document.querySelectorAll("body, h1, h2, h3, h4, h5, h6, p, a, button, form, input, select, textarea, .form-group, .form-control,label");


                        // Definir una variable para el nivel de zoom actual
                        var currentZoom = 100;

                        // Función para aumentar el nivel de zoom
                        function zoomIn() {
                        currentZoom += 10;
                        for (var i = 0; i < pageElements.length; i++) {
                            pageElements[i].style.fontSize = currentZoom + "%";
                            console.log("me ejecuto +");
                        }
                        }

                        // Función para reducir el nivel de zoom
                        function zoomOut() {
                        currentZoom -= 10;
                        for (var i = 0; i < pageElements.length; i++) {
                            pageElements[i].style.fontSize = currentZoom + "%";
                            console.log("me ejecuto -");
                        }
                        }
                        // Función para actualizar el nivel de zoom actual
                        function updateZoomLevel() {
                        const zoomLevel = currentZoom;
                        document.getElementById("zoom-level").innerText = `${zoomLevel}%`;
                        // Obtener el valor actual del zoom
                        var zoomValue = document.getElementById("zoom-level").innerText.replace("%", "");
                        // Actualizar la barra de progreso con el valor del zoom
                        document.querySelector(".progress-bar").style.width = zoomValue + "%";

                        }


                        // Obtener los botones de zoom y agregarles un listener para ejecutar las funciones correspondientes
                        document.getElementById("reset-layout").addEventListener("click", zoomIn);
                        document.getElementById("reset-layout-2").addEventListener("click", zoomOut);
        </script>

